if [ $# -ne 1 ] || [ "${1#-}" != "$1" ] 
then
    printf 'Usage: %s DOMAIN\n' "$0" >&2
    exit 1
fi

dom="$1"
slug=$(printf '%s\n' "${dom%.*}" | tr '.' '\n' | tac | tr '\n' '-')
slug=${slug%-}
mkdir -p "$dom"
set -C
printf > "$dom/${slug}.css" '@-moz-document domain(%s) {

}

/* vim:set ts=4 sts=4 sw=4 et: */\n' "$dom" 

# vim:ts=4 sts=4 sw=4 et
